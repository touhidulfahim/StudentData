@model IEnumerable<StudentData.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(source: Model, canPage: true, canSort: true, rowsPerPage: 10);
}

<h2 align="center">Student List</h2>

<p>
    @Html.ActionLink("Add Student", "Create")
</p>


<table class="table table-hover table-bordered">
    <tr>
        <th>
            Student Reg.
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Mobile No.
        </th>
        <th>
            Email Address
        </th>
        <th>
            Department
        </th>
        <th>
            Address
        </th>

        <th>
            Country
        </th>
        <th>
            State
        </th>
        <th>
            District
        </th>
        
        <th>
            Police Station
        </th>
        <th>
            Photo
        </th>
        <th>
            Update
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentRegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailID)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CuntryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.DistrictName)
            </td>
            <td>@Html.DisplayFor(modelItem => item.PoliceStation.PoliceStName)</td>
            <td>
                @Html.Raw((item.ImagePath == null ? "" : "<img width='100' alt='' src='/image/" + item.ImagePath + "'"))
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }
</table>
